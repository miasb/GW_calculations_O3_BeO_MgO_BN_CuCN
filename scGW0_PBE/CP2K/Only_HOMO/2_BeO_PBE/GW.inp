&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_def2_QZVP_RI_ALL
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 400
      REL_CUTOFF 50
    &END MGRID
    &QS
      ! all electron calculation since GW100 is all-electron test
      METHOD GAPW
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END
    &SCF
      EPS_SCF 1.0E-9
      SCF_GUESS RESTART
      MAX_SCF 200
    &END SCF
    &XC
      &XC_FUNCTIONAL
       &PBE
	    SCALE_X 1.00
       &END PBE
      &END XC_FUNCTIONAL
      ! GW is part of the WF_CORRELATION section
      &WF_CORRELATION
		&LOW_SCALING
		  !EPS_FILTER 0.0
		  MEMORY_CUT 1
		&END
        &RI_RPA
		  &HF
			FRACTION 1.0000
			&SCREENING
			  EPS_SCHWARZ 2.0E-17
			  SCREEN_ON_INITIAL_P FALSE
			&END SCREENING
		  &END HF
		  RPA_NUM_QUAD_POINTS 30
          &GW
			SC_GW0_ITER 20
            CORR_OCC   10
            CORR_VIRT  10
            RI_SIGMA_X FALSE
			&PRINT
			  &GW_DOS
				LOWER_BOUND -20.0
				UPPER_BOUND   0.0
				MIN_LEVEL_SPECTRAL 6
				MAX_LEVEL_SPECTRAL 6
				STEP 0.005
				MIN_LEVEL_SELF_ENERGY 6
				MAX_LEVEL_SELF_ENERGY 6
				BROADENING 0.0272
			  &END
			&END
          &END GW
        &END RI_RPA
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 20.0 20.0 20.0
      PERIODIC NONE
    &END CELL
    &COORD
Be 0.0000 0.0000 0.0000
